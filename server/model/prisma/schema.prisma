generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model WordsEN4 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsEN4")
}

model WordsEN5 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsEN5")
}

model WordsEN6 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsEN6")
}

model WordsES4 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsES4")
}

model WordsES5 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsES5")
}

model WordsES6 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsES6")
}

model WordsPT4 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsPT4")
}

model WordsPT5 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsPT5")
}

model WordsPT6 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsPT6")
