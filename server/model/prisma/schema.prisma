  discoveredBy Users[] @relation(name: "DiscoveredWordsHE5")
}

model WordsHE6 {
  id           Int     @id @default(autoincrement())
  word         String  @unique
  discoveredBy Users[] @relation(name: "DiscoveredWordsHE6")
}

model Users {
  id                 String     @id @default(uuid())
  name               String     @unique
  email              String     @unique
  password           String
  accessToken        String
  refreshToken       String
  registeredAt       DateTime   @default(now())
  pointsEN           Int
  pointsES           Int
  pointsPT           Int
  pointsHE           Int
  DiscoveredWordsEN4 WordsEN4[] @relation("DiscoveredWordsEN4")
  DiscoveredWordsEN5 WordsEN5[] @relation("DiscoveredWordsEN5")
  DiscoveredWordsEN6 WordsEN6[] @relation("DiscoveredWordsEN6")

  DiscoveredWordsES4 WordsES4[] @relation("DiscoveredWordsES4")
  DiscoveredWordsES5 WordsES5[] @relation("DiscoveredWordsES5")
  DiscoveredWordsES6 WordsES6[] @relation("DiscoveredWordsES6")

  DiscoveredWordsPT4 WordsPT4[] @relation("DiscoveredWordsPT4")
  DiscoveredWordsPT5 WordsPT5[] @relation("DiscoveredWordsPT5")
  DiscoveredWordsPT6 WordsPT6[] @relation("DiscoveredWordsPT6")

  DiscoveredWordsHE4 WordsHE4[] @relation("DiscoveredWordsHE4")
  DiscoveredWordsHE5 WordsHE5[] @relation("DiscoveredWordsHE5")
  DiscoveredWordsHE6 WordsHE6[] @relation("DiscoveredWordsHE6")

  @@unique([name, email])
}

model Guests {
  id         String @id @unique @default(uuid())
  ip         String
  gamesCount Int
  lastPlayed Int
}
